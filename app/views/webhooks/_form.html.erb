<%= form_for @webhook, class: 'form-horizontal' do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :slack_incoming_hook %>
        <%= f.text_field :slack_incoming_hook, class: 'form-control', placeholder: 'https://hooks.slack.com/services/*' %>
    </div>

    <%= f.submit 'Save', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', webhooks_url, class: 'btn btn-default' %>
<% end %>
