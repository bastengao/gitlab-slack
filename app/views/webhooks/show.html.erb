<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @webhook.name %></p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Hook For GitLab</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <%= gitlab_hook_url(@webhook.hook_id) %>
        <a class="copy-btn" href="javascript: void(0);" data-clipboard-text="<%= gitlab_hook_url(@webhook.hook_id) %>">Copy It</a>
      </p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label"><i class="fa fa-slack"></i> Slack incoming hook</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @webhook.slack_incoming_hook %></p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to 'Edit', edit_webhook_path(@webhook), class: 'btn btn-primary' %>
      <%= link_to 'Back', webhooks_path, class: 'btn btn-default' %>
    </div>
  </div>
</form>