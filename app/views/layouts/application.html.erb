<!DOCTYPE html>
<html>
<head>
  <title>GitlabSlack</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render '/layouts/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-md-12">

      <% flash.each do |key, value| %>
        <p class="alert alert-<%= flash_to_alert key %>"><%= value %></p>
      <% end %>

      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
